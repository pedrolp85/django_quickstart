{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django: Runserver",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/django_quickstart/manage.py",
            "args": [
                "runserver",
                "--noreload",
                "--nothreading"
            ],
            "django": true,
            "env": {
                "DJANGO_SETTINGS_MODULE": "django_quickstart.settings.dev",
                "PYTHONPATH": "${workspaceFolder}/"
            },
            "console": "integratedTerminal"
        }
    ]
}
